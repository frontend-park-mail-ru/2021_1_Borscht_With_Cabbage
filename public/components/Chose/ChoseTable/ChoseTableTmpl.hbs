<table cellspacing="8" cellpadding="8" align="center" class="chose-table__container">
    <tr class="chose-table__row">
        <td class="chose-table__col">

        </td>
        {{#each baskets}}
            <td>
                <div class="chose-table__col1">
                    <img class="chose-table__img" src="{{this.restaurantImage}}">
                    <div>{{this.restaurantName}}</div>
                </div>
            </td>
        {{/each}}
    </tr>
    <tr class="chose-table__row">
        <td class="chose-table__col">
            Количество блюд
        </td>
        {{#each baskets}}
            <td class="chose-table__col">
                {{this.totalFoods}}
            </td>
        {{/each}}
    </tr>
    <tr class="chose-table__row">
        <td class="chose-table__col">
            Суммарный вес
        </td>
        {{#each baskets}}
            <td class="chose-table__col">
                {{this.totalWeight}} гр.
            </td>
        {{/each}}
    </tr>
    <tr class="chose-table__row">
        <td class="chose-table__col">
            Количество калорий
        </td>
        {{#each baskets}}
            <td class="chose-table__col">
                {{this.totalCalo}} ккал
            </td>
        {{/each}}
    </tr>
    <tr class="chose-table__row">
        <td class="chose-table__col">
            Стоимость доставки
        </td>
        {{#each baskets}}
            <td class="chose-table__col">
                {{this.deliveryPrice}} руб.
            </td>
        {{/each}}
    </tr>
    <tr class="chose-table__row">
        <td class="chose-table__col">
            Время доставки
        </td>
        {{#each baskets}}
            <td class="chose-table__col">
                {{this.deliveryTime}} минут
            </td>
        {{/each}}
    </tr>
    <tr class="chose-table__row">
        <td class="chose-table__col">
            Итоговая стоимость
        </td>
        {{#each baskets}}
            <td class="chose-table__col">
                {{this.totalPrice}} руб.
            </td>
        {{/each}}
    </tr>

    <tr class="chose-table__row">
        <td class="chose-table__col">
        </td>
        {{#each baskets}}
            <td>
                <div><button class="button" data-button="delete" data-id="{{this.id}}"
                        id="deleteButton{{this.id}}">Удалить корзину
                </button></div>
                <div><button class="button" data-button="store" data-id="{{this.restaurantID}}" id="goToStore{{this.id}}">
                    Перейти в магазин
                </button></div>
                <div><button class="button" data-button="order" data-id="{{this.restaurantID}}" id="orderButton{{this.id}}">
                    Заказать
                </button></div>
            </td>
        {{/each}}
    </tr>

</table>


